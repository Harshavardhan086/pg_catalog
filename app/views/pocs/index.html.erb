<p id="notice"><%= notice %></p>

<h1>Pocs</h1>

<table>
  <thead>
    <tr>
      <th>Poc name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pocs.each do |poc| %>
      <tr>
        <td><%= poc.poc_name %></td>
        <td><%= link_to 'Show', poc %></td>
        <td><%= link_to 'Edit', edit_poc_path(poc) %></td>
        <td><%= link_to 'Destroy', poc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Poc', new_poc_path %>
