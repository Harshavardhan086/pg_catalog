<p id="notice"><%= notice %></p>

<h1>Service Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_groups.each do |service_group| %>
      <tr>
        <td><%= service_group.name %></td>
        <td><%= link_to 'Show', service_group %></td>
        <td><%= link_to 'Edit', edit_service_group_path(service_group) %></td>
        <td><%= link_to 'Destroy', service_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

